@using E_PortfolioSystem.Web.ViewModels.Student
@model IEnumerable<StudentListViewModel>

@{
    ViewData["Title"] = "Управление на студенти";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Няма налични студенти в системата.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Име</th>
                        <th>Факултетен номер</th>
                        <th>Статус</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>@student.FullName</td>
                            <td>@student.FacultyNumber</td>
                            <td>
                                @if (student.IsEnrolled)
                                {
                                    <span class="badge bg-success">Записан</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Не е записан</span>
                                }
                            </td>
                            <td>
                                @if (student.IsEnrolled)
                                {
                                    <form asp-action="Remove" method="post" class="d-inline">
                                        <input type="hidden" name="subjectId" value="@ViewBag.SubjectId" />
                                        <input type="hidden" name="studentId" value="@student.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="bi bi-person-dash"></i> Отпиши
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <form asp-action="Enroll" method="post" class="d-inline">
                                        <input type="hidden" name="subjectId" value="@ViewBag.SubjectId" />
                                        <input type="hidden" name="studentId" value="@student.Id" />
                                        <button type="submit" class="btn btn-success btn-sm">
                                            <i class="bi bi-person-plus"></i> Запиши
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="mt-3">
        <a asp-controller="TeacherSubject" asp-action="Details" asp-route-id="@ViewBag.SubjectId" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Назад към детайли
        </a>
    </div>
</div> 