@using E_PortfolioSystem.Web.ViewModels.Experience
@model ExperienceDetailsViewModel

<div class="container px-5 my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-center m-0">Детайли за професионален опит</h2>
        <div>
            <a asp-controller="Experience" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                Редактирай
            </a>
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
                Изтрий
            </button>
        </div>
    </div>

    <div class="card shadow border-0 rounded-4">
        <div class="card-body p-5">
            <h4 class="text-success fw-bold mb-3">@Model.Profession</h4>
            <p><strong>Компания:</strong> @Model.Company</p>
            <p><strong>Сектор:</strong> @Model.Sector</p>
            <p><strong>Период:</strong> @Model.StartDate - @Model.EndDate</p>
            <p><strong>Описание:</strong> @Model.Description</p>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mt-4">
        <a asp-controller="Profile" asp-action="Resume" class="btn btn-secondary">Назад</a>
        <a asp-controller="Experience" asp-action="Add" class="btn btn-success">Добави опит</a>
    </div>
</div>

<!-- Confirmation Modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow rounded-4">
            <div class="modal-header bg-danger text-white rounded-top-4">
                <h5 class="modal-title" id="confirmDeleteLabel">Потвърждение</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Затвори"></button>
            </div>
            <div class="modal-body">
                Сигурни ли сте, че искате да изтриете този опит? Това действие е необратимо.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отказ</button>

                <form asp-action="Delete" asp-controller="Experience" asp-route-id="@Model.Id" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Да, изтрий</button>
                </form>
            </div>
        </div>
    </div>
</div>