@using E_PortfolioSystem.Web.ViewModels.Subject
@model TeacherSubjectDetailsViewModel

@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h2>@Model.Name</h2>
        </div>
        <div class="col-md-4 text-end">
            <a asp-controller="TeacherSubjectStudents" asp-action="Manage" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="bi bi-people"></i> Управление на студенти
            </a>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header">
            <h5 class="mb-0">Информация за предмета</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Преподавател:</strong> @Model.TeacherName</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Брой записани студенти:</strong> @Model.EnrolledStudentsCount</p>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4 mt-4">
        <a asp-action="Subjects" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Назад към списъка
        </a>
        <a asp-controller="TeacherSubject"
           asp-action="Edit"
           asp-route-id="@Model.Id"
           class="btn btn-primary">
            Редактирай предмет
        </a>
    </div>
</div>

