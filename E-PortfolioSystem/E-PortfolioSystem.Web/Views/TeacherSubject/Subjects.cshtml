@using E_PortfolioSystem.Web.ViewModels.Subject
@model IEnumerable<TeacherSubjectViewModel>

@{
    ViewData["Title"] = "Моите предмети";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewData["Title"]</h2>
        <a asp-action="Add" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Добави предмет
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            Все още нямате добавени предмети.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var subject in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@subject.Name</h5>
                            <p class="card-text">
                                <small class="text-muted">
                                    Записани студенти: @subject.EnrolledStudentsCount
                                </small>
                            </p>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <a asp-action="Details" asp-route-id="@subject.Id" class="btn btn-primary w-100">
                                Детайли
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div> 