@model ErrorViewModel

@{
    ViewData["Title"] = "Грешка";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-danger d-flex align-items-center shadow-lg p-4" role="alert">
                <i class="bi bi-exclamation-triangle-fill display-4 me-4 text-danger"></i>
                <div>
                    <h1 class="mb-3">Упс! Нещо се обърка.</h1>
                    <p class="lead mb-4">@((Model.Message ?? "Възникна неочаквана грешка. Моля, опитайте отново или се свържете с администратора."))</p>
                    <a href="/" class="btn btn-outline-primary"><i class="bi bi-house"></i> Към началната страница</a>
                </div>
            </div>
        </div>
    </div>
</div>
