@model IEnumerable<E_PortfolioSystem.Web.ViewModels.AttachedDocument.AttachedDocumentFormModel>

<section class="py-5">
    @if (Model.Any())
    {
        @foreach (var document in Model)
        {
            <div class="container px-5">
                <h1 class="display-6 fw-bolder">@document.FileName</h1>

                @if (!string.IsNullOrEmpty(document.Description))
                {
                    <p class="mt-4"><strong>Описание:</strong> @document.Description</p>
                }

                @if (!string.IsNullOrEmpty(document.DocumentType))
                {
                    <p><strong>Тип на документа:</strong>@document.DocumentType</p>
                }

                @if (document.UploadDate.HasValue)
                {
                    <p><strong>Качен на:</strong> @document.UploadDate.Value.ToString("dd.MM.yyyy")</p>
                }

                <div class="mt-3">
                    <a class="btn btn-primary" asp-action="Download" asp-controller="AttachedDocument" asp-route-id="@document.Id">
                        Свали документа
                    </a>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            Няма добавени прикачени документи към този проект.
        </div>
    }
</section>