@using E_PortfolioSystem.Data.Models
@using Microsoft.AspNetCore.Identity
@using static E_PortfolioSystem.Common.GeneralApplicationConstants;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@Title</title>

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/assets/favicon.ico" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Core theme CSS -->
    <link href="~/css/styles.css" rel="stylesheet" />

    <!-- Additional site CSS -->
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
</head>

<body class="d-flex flex-column h-100">
    <header class="py-5">
        <nav class="navbar navbar-expand-lg navbar-light bg-white py-3">
            <div class="container px-5">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="fw-bolder text-primary">@Title</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <ul class="navbar-nav ms-auto mb-2 mb-lg-0 small fw-bolder">
                            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Начало</a></li>
                            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="University" asp-action="University">Университет</a></li>
                            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Profile" asp-action="Resume">Резюме</a></li>
                            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Project" asp-action="Projects">Проекти</a></li>
                            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Contact" asp-action="Index">Контакт</a></li>
                        </ul>
                    }
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-shrink-0">
        @RenderBody()
    </main>

    <footer class="bg-white py-4 mt-auto">
        <div class="container px-5">
            <div class="row align-items-center justify-content-between flex-column flex-sm-row">
                <div class="col-auto">
                    <div class="small m-0">
                        &copy; @Title @ReleaseYear
                        @if (DateTime.UtcNow.Year != ReleaseYear)
                        {
                            @Html.Raw($" - {DateTime.UtcNow.Year}")
                        }
                    </div>
                </div>
                <div class="col-auto">
                    <a class="small" href="#">Privacy</a>
                    <span class="mx-1">&middot;</span>
                    <a class="small" href="#">Terms</a>
                    <span class="mx-1">&middot;</span>
                    <a class="small" href="#">Contact</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap core JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Core theme JS -->
    <script src="~/js/scripts.js"></script>

    <!-- Optional site JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
