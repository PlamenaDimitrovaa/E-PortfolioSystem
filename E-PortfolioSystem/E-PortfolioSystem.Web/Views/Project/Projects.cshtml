@model IEnumerable<E_PortfolioSystem.Web.ViewModels.Project.ProjectFormModel>
@using static E_PortfolioSystem.Common.GeneralApplicationConstants;

<section class="py-5">
    <div class="container px-5 mb-5">
        <div class="d-flex justify-content-between align-items-center mb-5">
            <h1 class="display-5 fw-bolder mb-0">
                <span class="text-gradient d-inline">@Projects</span>
            </h1>
            <a class="btn btn-primary btn-lg" asp-controller="Project" asp-action="Add">
                <i class="bi bi-plus-circle"></i> Добави проект
            </a>
        </div>

        <div class="row gx-5 justify-content-center">
            <div class="col-lg-11 col-xl-9 col-xxl-8">
                @if (!Model.Any())
                {
                    <div class="alert alert-info text-center" role="alert">
                        Все още няма добавени проекти.
                    </div>
                }
                else
                {
                    @foreach (var project in Model)
                    {
                        <div class="card overflow-hidden shadow rounded-4 border-0 mb-5" style="height: 260px;">
                            <div class="card-body p-0 h-100">
                                <div class="row h-100 align-items-center g-0">
                                    <div class="col-auto" style="width: 250px;">
                                        <img src="@(string.IsNullOrEmpty(project.ImageUrl) ? "https://dummyimage.com/600x600/343a40/6c757d" : project.ImageUrl)"
                                             class="img-fluid rounded h-100 w-100"
                                             style="object-fit: cover; height: 100%; width: 100%;" alt="Project image" />
                                    </div>
                                    <div class="col ps-4">
                                        <h2 class="fw-bolder">@project.Title</h2>
                                        <p>@project.Description</p>
                                        <a class="btn btn-outline-primary mt-3" asp-controller="Project" asp-action="Details" asp-route-id="@project.Id">
                                            <i class="bi bi-info-circle"></i> Детайли
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</section>