@model IEnumerable<E_PortfolioSystem.Web.ViewModels.Project.ProjectFormModel>
@using static E_PortfolioSystem.Common.GeneralApplicationConstants;

<section class="py-5">
    <div class="container px-5 mb-5">
        <div class="d-flex justify-content-between align-items-center mb-5">
            <h1 class="display-5 fw-bolder mb-0">
                <span class="text-gradient d-inline">@Projects</span>
            </h1>
            <a class="btn btn-primary btn-lg" asp-controller="Project" asp-action="Add">
                <i class="bi bi-plus-circle"></i> Добави проект
            </a>
        </div>

        <div class="row gx-5 justify-content-center">
            <div class="col-lg-11 col-xl-9 col-xxl-8">
                @if (!Model.Any())
                {
                    <div class="alert alert-info text-center" role="alert">
                        Все още няма добавени проекти.
                    </div>
                }
                else
                {
                    @foreach (var project in Model)
                    {
                        <div class="card overflow-hidden shadow rounded-4 border-0 mb-5">
                            <div class="card-body p-0">
                                <div class="d-flex align-items-center">
                                    <div class="p-5">
                                        <h2 class="fw-bolder">@project.Title</h2>
                                        <p>@project.Description</p>
                                    </div>
                                    <div class="ratio ratio-1x1" style="width: 350px;">
                                        <img src="@(string.IsNullOrEmpty(project.ImageUrl) ? "https://dummyimage.com/600x600/343a40/6c757d" : project.ImageUrl)"
                                             class="img-fluid rounded object-fit-cover"
                                             alt="Project image" />
                                    </div>
                                </div>
                                <div class="d-flex justify-content-center px-4 pb-4 mt-3">
                                    <a class="btn btn-outline-primary" asp-controller="Project" asp-action="Details" asp-route-id="@project.Id">
                                        <i class="bi bi-info-circle"></i> Детайли
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</section>


<section class="py-5 bg-gradient-primary-to-secondary text-white">
    <div class="container px-5 my-5">
        <div class="text-center">
            <h2 class="display-4 fw-bolder mb-4">Хайде да създадем нещо заедно</h2>
            <a class="btn btn-outline-light btn-lg px-5 py-3 fs-6 fw-bolder" asp-area="" asp-controller="HRContact" asp-action="Send">Свържи се с мен</a>
        </div>
    </div>
</section>