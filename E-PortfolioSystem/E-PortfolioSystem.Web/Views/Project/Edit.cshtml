@model E_PortfolioSystem.Web.ViewModels.Project.ProjectEditViewModel

@{
    ViewData["Title"] = "Редактирай проект";
}

<div class="container px-5 my-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <div class="card shadow border-0 rounded-4">
                <div class="card-body p-4">
                    <h1 class="text-primary mb-4">Редактирай проект</h1>

                    <form asp-action="Edit" asp-controller="Project" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Заглавие</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Описание</label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Link" class="form-label">Външен линк</label>
                            <input asp-for="Link" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label">URL на изображение</label>
                            <input asp-for="ImageUrl" class="form-control" />
                        </div>

                        <hr class="my-5" />

                        <h4 class="text-secondary mb-3">Прикачен документ</h4>

                        @if (Model.AttachedDocument != null)
                        {
                            <p>
                                <strong>Съществуващ файл:</strong> @Model.AttachedDocument.FileName
                                <br />
                                <strong>Тип:</strong> @Model.AttachedDocument.DocumentType
                                <br />
                                <strong>Описание:</strong> @Model.AttachedDocument.Description
                            </p>
                        }

                        <div class="mb-3">
                            <label asp-for="DocumentType" class="form-label">Тип на документа</label>
                            <input asp-for="DocumentType" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="DocumentDescription" class="form-label">Описание на документа</label>
                            <textarea asp-for="DocumentDescription" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="mb-3">
                            <label asp-for="File" class="form-label">Замени файла (по избор)</label>
                            <input asp-for="File" type="file" class="form-control" />
                        </div>

                        <div class="d-grid mb-4">
                            <button type="submit" class="btn btn-success btn-lg rounded-pill">Запази промените</button>
                        </div>

                        <div>
                            <a asp-action="Projects" asp-controller="Project" class="btn btn-secondary">Назад</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
