@model E_PortfolioSystem.Web.ViewModels.Recommendation.RecommendationViewModel

@{
    ViewData["Title"] = "Редактиране на препоръка";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="card-title mb-4">
                        <i class="bi bi-pencil-square"></i> Редактиране на препоръка
                    </h2>

                    <form asp-action="EditRecommendation" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label class="form-label">За потребител</label>
                            <input type="text" class="form-control" value="@Model.ToUserFullName" readonly />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Текст на препоръката</label>
                            <textarea name="text" class="form-control" rows="5" required>@Model.Text</textarea>
                            <span asp-validation-for="Text" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Recommendations" asp-route-userId="@Model.ToUserId" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Назад
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Запази промените
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 