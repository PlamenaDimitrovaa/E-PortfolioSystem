@using E_PortfolioSystem.Web.ViewModels.Profile
@model ProfileViewModel

@{
    ViewData["Title"] = "Моят профил";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-body text-center">
                    <img src="@Url.Content(Model.ImageUrl)" alt="@Model.FullName"
                         class="rounded-circle img-fluid" style="width: 150px; height: 150px; object-fit: cover;">
                    <h5 class="my-3">@Model.FullName</h5>
                    <p class="text-muted mb-4">@Model.Location</p>
                    <div class="d-flex justify-content-center mb-2">
                        <a asp-action="Edit" class="btn btn-primary">Редактирай профила</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Име</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.FullName</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Телефон</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@(string.IsNullOrEmpty(Model.Phone) ? "Не е въведен" : Model.Phone)</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Местоположение</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@(string.IsNullOrEmpty(Model.Location) ? "Не е въведено" : Model.Location)</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">За мен</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@(string.IsNullOrEmpty(Model.Bio) ? "Не е въведена информация" : Model.Bio)</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Публичен профил</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@(Model.IsPublic ? "Да" : "Не")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border: none;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
    </style>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 