@using E_PortfolioSystem.Web.ViewModels.Admin
@model IEnumerable<OnlineUserViewModel>

@{
    ViewData["Title"] = "Онлайн потребители";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="bi bi-person-check me-2"></i>Онлайн потребители
                <span class="badge bg-success ms-2">@Model.Count(u => u.IsOnline)</span>
            </h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Потребителско име</th>
                            <th>Имейл</th>
                            <th>Роля</th>
                            <th>Статус</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.UserName</td>
                                <td>@user.Email</td>
                                <td>@user.Role</td>
                                <td>
                                    @if (user.IsOnline)
                                    {
                                        <span class="badge bg-success">Онлайн</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Офлайн</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Автоматично обновяване на страницата на всеки 30 секунди
        setTimeout(function() {
            location.reload();
        }, 30000);
    </script>
} 