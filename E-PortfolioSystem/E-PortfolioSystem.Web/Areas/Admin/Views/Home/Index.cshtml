@model dynamic
@using E_PortfolioSystem.Web.Infrastructure.Extensions
@{
    ViewData["Title"] = "Административен панел";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center mb-5">Добре дошли в административния панел</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">Статистика на потребителите</h3>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Общ брой потребители:</span>
                            <span class="badge bg-primary rounded-pill">@Model.TotalUsers</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Студенти:</span>
                            <span class="badge bg-success rounded-pill">@Model.Students</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Преподаватели:</span>
                            <span class="badge bg-info rounded-pill">@Model.Teachers</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>HR специалисти:</span>
                            <span class="badge bg-warning rounded-pill">@Model.HRs</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-6 offset-md-3">
            <div class="d-grid gap-3">
                <a asp-area="Admin" asp-controller="User" asp-action="Manage" class="btn btn-primary btn-lg">
                    <i class="bi bi-people-fill me-2"></i>Управление на потребители
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 15px;
            overflow: hidden;
        }

        .card-header {
            background: linear-gradient(45deg, #007bff, #0056b3);
        }

        .list-group-item {
            transition: background-color 0.3s;
        }

        .list-group-item:hover {
            background-color: #f8f9fa;
        }

        .btn {
            border-radius: 10px;
            transition: transform 0.2s;
        }

        .btn:not(.disabled):hover {
            transform: translateY(-2px);
        }

        .badge {
            font-size: 1rem;
            padding: 0.5rem 1rem;
        }
    </style>
} 